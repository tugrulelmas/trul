@model Trul.Application.UI.Core.Models.AccountViewModel
@using Trul.WebUI.Helper

@{
    ViewBag.Title = this.GetLocalResource("LogOn");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_PublicTopMenu", "LogOn")
<ul class="breadcrumb">
    <li class="active">@this.GetLocalResource("LogOn")</li>
</ul>
@using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { id = "LogOnForm" }))
{
    <div class="form-horizontal">
        <div class="control-group">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.UserName)
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            <div id="inputLastName" class="controls">
                @Html.PasswordFor(m => m.Password)
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <label class="checkbox">
                    @Html.CheckBoxFor(m => m.IsRememberMe)
                    @this.GetLocalResource("RememberMe")
                </label>
                <button id="btnLogin" type="submit" class="btn">@this.GetLocalResource("LogOn")</button>
            </div>
        </div>
    </div>
}

@Html.Raw(Model.Validate(new Trul.Framework.Rules.ValidateSettings
{
    FormID = "LogOnForm",
    SubmitControlID = "btnLogin"
}))
